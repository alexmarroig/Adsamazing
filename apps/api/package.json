{
  "name": "@ads/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",

    "build": "pnpm run prisma:generate && tsup src/index.ts --format esm --out-dir dist --clean",

    "start": "node dist/index.js",

    "prisma:generate": "prisma generate",

    "lint": "eslint src --ext .ts",

    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@ads/db": "workspace:*",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "pino": "^9.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prisma": "^6.1.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "description": "Ads API service"
}
